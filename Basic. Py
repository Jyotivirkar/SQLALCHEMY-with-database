Basedir=OS.path.absname(os.path.dirname(__file__) 

app=Flask(__name__) 

app.config['SQLALCHEMY_DATABASE_URI']='sqlite:///'os.path.join(basedir, 'data_sqlite'
app. Config['SQLALCHEMY_TRACK_MODIFICATIONS']= false
 
db=SQLALCHEMY(app) 

